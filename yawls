/var/log/yawls* {
    su root root
    rotate 0
    daily
    sharedscripts
    prerotate
        if [ -e /var/run/yawls.pid ]; then
			invoke-rc.d --quiet yawls stop > /dev/null
			touch /var/run/yawlsd.stopped
	    fi
	endscript
	postrotate
		if [ -e /var/run/yawlsd.stopped ]; then
			rm /var/run/yawlsd.stopped
			rm /var/log/yawls*
			invoke-rc.d --quiet yawls start > /dev/null
		fi
	endscript
}
